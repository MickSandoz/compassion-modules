<openerp>
<data>
	<record id="view_compassion_bvr_wizard" model="ir.ui.view">
		<field name="name">view.compassion.bvr.wizard</field>
		<field name="model">compassion.bvr.wizard</field>
		<field name="arch" type="xml">
			<form string="Print settings" version="7.0">
				<group>
					<field name="dest_account_id" />
				</group>
				<group string="Gift">
					<group>
						<field name="print_birthday" />
						<field name="print_family" />
						<field name="print_general" />
					</group>
					<group>
						<field name="print_project" />
						<field name="print_graduation" />
					</group>
				</group>
				<group string="Fund">
					<p>If a fund is selected, one BVR for this fund will be 
					printed for each selected partner.</p>
					<field name="fund_id" />
				</group>
				<footer>
					<button name="launch_report" type="object" string="print" />
				</footer>
			</form>
		</field>
	</record>
</data>
</openerp>
